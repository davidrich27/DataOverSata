<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="400.0" prefWidth="640.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CodeCreateController">
  <children>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
      <children>
            <Label layoutX="161.0" layoutY="63.0" text="Name:" />
            <Label layoutX="162.0" layoutY="96.0" text="Description:" />
            <TextField fx:id="nameTxt" layoutX="287.0" layoutY="57.0" prefHeight="27.0" prefWidth="227.0" />
            <Button fx:id="confirmBtn" layoutX="224.0" layoutY="359.0" mnemonicParsing="false" onAction="#confirmClick" text="Confirm" />
            <Button fx:id="cancelBtn" layoutX="299.0" layoutY="359.0" mnemonicParsing="false" onAction="#cancelClick" text="Cancel" />
            <Label fx:id="titleLbl" layoutX="215.0" layoutY="14.0" text="Create New Code">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <TextArea fx:id="descrTxt" layoutX="287.0" layoutY="96.0" prefHeight="200.0" prefWidth="227.0" />
            <Label fx:id="warningLbl" alignment="CENTER" layoutX="196.0" layoutY="320.0" text="ERROR: Please fill in all fields." textAlignment="CENTER" textFill="RED">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
      </children>
    </AnchorPane>
  </children>
</VBox>
